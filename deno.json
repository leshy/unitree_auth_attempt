{
    "nodeModulesDir": "auto",
    "tasks": {
        "build": "deno run -A build.ts",
        "watch": "deno run -A build.ts --watch"
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@1",
        "webrtc-polyfill": "npm:webrtc-polyfill@^1.1.10",
    },
    "compilerOptions": {
        "lib": ["dom", "deno.ns"]
    },
    "lint": {
        "rules": {
            "exclude": ["require-await", "ban-ts-comment"]
        }
    },
    "fmt": {
        "indentWidth": 4,
        "useTabs": false,
        "semiColons": false
    }
}
