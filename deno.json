{
    "nodeModulesDir": "auto",
    "tasks": {
        "build": "deno run -A build.ts",
        "watch": "deno run -A build.ts --watch"
    },
    "imports": {
        "@oak/oak": "jsr:@oak/oak@^17.1.4",
        "@std/assert": "jsr:@std/assert@1",
        "aes-cross": "npm:aes-cross@^1.1.2",
        "aes-ecb": "npm:aes-ecb@^1.3.15",
        "js-crypto-rsa": "npm:js-crypto-rsa@^1.0.7",
        "webrtc-polyfill": "npm:webrtc-polyfill@^1.1.10",
    },
    "compilerOptions": {
        "lib": ["dom", "deno.ns"]
    },
    "lint": {
        "rules": {
            "exclude": ["require-await", "ban-ts-comment"]
        }
    },
    "fmt": {
        "indentWidth": 4,
        "useTabs": false,
        "semiColons": false
    }
}
